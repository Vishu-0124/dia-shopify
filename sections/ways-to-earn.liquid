<div class="ways-to-earn" style="background-color: {{ section.settings.bg_color }};">
	<div class="container">
		<div class="ways-to-earn__wrapper">
			{% for block in section.blocks %}
				<div class="ways-to-earn__item" {{ block.shopify_attributes }}>
					{% if block.settings.icon != blank %}
						<div class="ways-to-earn__item-img">
							<img
									src="{{ block.settings.icon | img_url: 'master' }}"
									alt="{{ block.settings.icon.alt }}"
									loading="lazy">
						</div>
					{% endif %}
					{% if block.settings.title != blank %}
						<div class="ways-to-earn__item-title">{{ block.settings.title }}</div>
					{% endif %}
				</div>
			{% endfor %}
		</div>
	</div>
</div>

{% schema %}
{
  "name": "Ways to earn",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "richtext",
          "id": "title",
          "label": "Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ways to earn",
      "blocks": [
        {
          "type": "icon"
        },
        {
          "type": "icon"
        },
        {
          "type": "icon"
        }
      ]
    }
  ]
}
{% endschema %}