<section class="text-grid-section section--{{ section.id }}" data-section-id="{{ section.id }}" style="background-color:{{ section.settings.bg_color }};">
    <div class="container">
        {% if section.settings.title != blank %}
            <div class="section__title section__title--center{% unless section.settings.desc == blank %} section__title--desc{% endunless %}">
                <h2 class="section__title-text">{{ section.settings.title | escape }}</h2>
            </div>
        {% endif %}
    </div>


    <div class="container">
        <div class="text-grid">
            <div class="text-grid__items">
                {% for block in section.blocks %}
                    <div class="text-grid__item-wrapper">
                        <div class="text-grid__item">
                            <div class="text-grid__text">
                                {% unless block.settings.title == blank %}
                                    <h3 class="text-grid__title">{{ block.settings.title | escape }}</h3>
                                {% endunless %}
                                {% unless block.settings.desc == blank %}
                                    <div class="text-grid__desc">
                                        {{ block.settings.desc }}
                                    </div>
                                {% endunless %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div> 

        {% unless section.settings.link == blank %}
            <div class="section__link section__link--center">
                <a href="{{ section.settings.link }}" class="link link--arrow section__link-link">{{ section.settings.link_title | escape }}</a>
            </div>
        {% endunless %}
    </div>
</section>

{% if section.blocks.size == 0 %}
    <div class="placeholder-noblocks">
        {{ 'homepage.onboarding.no_content' | t }}
    </div>
{% endif %}

{% schema %}
{
    "name": "Text grid columns",
    "max_blocks": 6,
    "settings": [
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background color"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Text columns with images"
        },
        {
            "type": "text",
            "id": "link_title",
            "label": "Link label",
            "default": "Learn more"
        },
        {
            "type": "url",
            "id": "link",
            "label": "Link"
        }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "Text column",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Heading",
                    "default": "Column heading"
                },
                {
                    "type": "richtext",
                    "id": "desc",
                    "label": "Text",
                    "default": "<p>Describe the main features of your brand or products using a few lines of text along with images or icons.</p>"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Text grid columns",
            "category": "Text",
            "blocks": [
                {
                    "type": "text"
                },
                {
                    "type": "text"
                },
                {
                    "type": "text"
                }
            ]
        }
    ]
}
{% endschema %}