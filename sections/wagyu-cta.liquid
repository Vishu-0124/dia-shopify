<link rel="stylesheet" href="{{ 'wagyu-cta.css' | asset_url }}">

<style>
	#shopify-section-{{ section.id }} {
		padding-top: {{ section.settings.padding_top }}px;
		padding-bottom: {{ section.settings.padding_bottom }}px;
	}

	@media (max-width: 767px) {
		#shopify-section-{{ section.id }} {
			padding-top: {{ section.settings.padding_top_mobile }}px;
			padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
		}

		#shopify-section-{{ section.id }} .wagyu-cta__img {
			max-height: {{ section.settings.height_mobile }}px;
			max-width: {{ section.settings.height_mobile }}px;
		}
	}
</style>

<div class="wagyu-cta">
	<div class="container wagyu-cta__wrapper">
		{% for block in section.blocks %}
			{% case block.type %}
				{% when 'copy' %}
					<div class="copy" style="max-width: {{ block.settings.max_width }}px" {{ block.shopify_attributes }}>
						{{ block.settings.title }}
					</div>
				{% when 'button' %}
					<a href="{{ block.settings.button_url }}" class="button" {{ block.shopify_attributes }}>
						{{ block.settings.button_text | escape }}
					</a>
			{% endcase %}
		{% endfor %}
	</div>
</div>

{% schema %}
{
  "name": "Wagyu CTA",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding desktop"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Section Padding Bottom",
      "default": 50
    },
    {
      "type": "header",
      "content": "Section padding mobile"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Section Padding Bottom",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "copy",
      "name": "Content",
      "settings": [
        {
          "type": "richtext",
          "id": "title",
          "label": "Content"
        },
        {
          "type": "range",
          "id": "max_width",
          "min": 320,
          "max": 1020,
          "step": 10,
          "unit": "px",
          "label": "Copy Max Width",
          "default": 770
        }
      ]
    },
    {
      "type": "button",
      "name": "CTA",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Wagyu CTA"
    }
  ]
}
{% endschema %}