<style>
    #shopify-section-{{ section.id }} .text-info{
        background-color: {{ section.settings.bg_color }};
        color: {{ section.settings.text_color }};
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
        font-size: {{ section.settings.font_size }}px;
    }

    @media (max-width: 767px){
        #shopify-section-{{ section.id }} .text-info{
            padding-top: {{ section.settings.padding_top_mobile }}px;
            padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
            font-size: {{ section.settings.font_size_mobile }}px;
        }
    }
</style>

<div class="text-info">
  <div class="container">
    <span class="text-info__content">{{ section.settings.text }}</span>
  </div>
</div>

{% schema %}
  {
    "name": "Text Info",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color"
      },
      {
        "type": "range",
        "id": "font_size",
        "label": "Font size",
        "step": 1,
        "min": 0,
        "max": 50,
        "default": 18
      }, {
        "type": "range",
        "id": "font_size_mobile",
        "label": "Font size mobile",
        "step": 1,
        "min": 0,
        "max": 50,
        "default": 18
      }, {
        "type": "range",
        "id": "padding_top",
        "label": "Padding top",
        "step": 2,
        "min": 0,
        "max": 50,
        "default": 10
      }, {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding bottom",
        "step": 2,
        "min": 0,
        "max": 50,
        "default": 10
      }, {
        "type": "range",
        "id": "padding_top_mobile",
        "label": "Padding top mobile",
        "step": 2,
        "min": 0,
        "max": 50,
        "default": 10
      }, {
        "type": "range",
        "id": "padding_bottom_mobile",
        "label": "Padding bottom mobile",
        "step": 2,
        "min": 0,
        "max": 50,
        "default": 10
      }
    ],
    "presets": [
      {
        "name": "Text Info"
      }
    ]
  }
{% endschema %}