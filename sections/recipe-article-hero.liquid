		<div class="article-hero__list">
			{% for block in section.blocks %}
				<div class="article-hero__item" {{ block.shopify_attributes }}>
					{% if block.settings.icon != blank %}
						<div class="article-hero__item-img">
							<img src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ block.settings.icon.alt }}" loading="lazy">
							<div class="article-hero__item-content">
								{% if block.settings.icon_text != blank %}
									<span class="article-hero__item-title">{{ block.settings.icon_text }}</span>
								{% endif %}
								{% if block.settings.title != blank %}
									<div class="article-hero__item-text">{{ block.settings.title }}</div>
								{% endif %}
							</div>
						</div>
					{% endif %}

				</div>
			{% endfor %}
		</div>
		{% if section.settings.copy != blank %}
			<div class="article-hero__content u-text-center rte">
				{{ section.settings.copy }}
			</div>
		{% endif %}
	</div>
