<script>
    document.addEventListener("DOMContentLoaded", () => {
        let menu = document.querySelectorAll(".article__share-items");
        let btn = document.querySelectorAll(".article-hero__meta-share-btn");

        btn.forEach(btns => {
            btns.addEventListener("click", (e) => {
                btns.parentNode.querySelector('.article__share-items').classList.toggle("show")
            })
        })

        window.onclick = (event) => {
            menu.forEach(item => {
                if (!event.target.matches('.article-hero__meta-share-btn')) {
                    if (item.classList.contains("show")) {
                        item.classList.remove("show")
                    }
                }
            })

        };

        menu.forEach(item => {
            item.addEventListener('click', event => event.stopPropagation());
        })
    })
</script>

